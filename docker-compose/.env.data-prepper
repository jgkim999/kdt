# Data Prepper Environment Variables
TZ=Asia/Seoul

# JVM Configuration with Error Handling
DATA_PREPPER_JAVA_OPTS=-Xms512m -Xmx1024m -XX:+UseG1GC -XX:MaxGCPauseMillis=200 -XX:+HeapDumpOnOutOfMemoryError -XX:HeapDumpPath=/usr/share/data-prepper/logs/ -XX:+PrintGCDetails -XX:+PrintGCTimeStamps -Xloggc:/usr/share/data-prepper/logs/gc.log

# Logging Configuration
LOG_LEVEL=INFO
ROOT_LOG_LEVEL=WARN
DATA_PREPPER_LOG_LEVEL=INFO
DATA_PREPPER_LOG_FORMAT=JSON

# Data Directory Configuration
DATA_PREPPER_DATA_DIR=/usr/share/data-prepper/data
DATA_PREPPER_CONFIG_DIR=/usr/share/data-prepper/config
DATA_PREPPER_PIPELINES_DIR=/usr/share/data-prepper/pipelines

# Dead Letter Queue Configuration
DLQ_DIR=/usr/share/data-prepper/data/dlq
DLQ_BASE_DIR=/usr/share/data-prepper/data/dlq
DLQ_RETENTION_DAYS=7
DLQ_MAX_SIZE=1gb
DLQ_MAX_FILE_SIZE=100mb
DLQ_MAX_FILES_PER_CATEGORY=10
DLQ_CLEANUP_INTERVAL=1h

# Error Handling Configuration
ERROR_LOG_LEVEL=INFO
ERROR_LOG_FORMAT=JSON
MAX_ERRORS_THRESHOLD=100
CIRCUIT_BREAKER_TIMEOUT=30s
MAX_ERRORS_PER_MINUTE=100

# Retry Configuration
MAX_RETRIES=5
RETRY_BACKOFF_STRATEGY=exponential
INITIAL_RETRY_DELAY=1s
MAX_RETRY_DELAY=30s
RETRY_MULTIPLIER=2.0
RETRY_JITTER=0.1

# Connection Configuration
CONNECTION_TIMEOUT=10s
SOCKET_TIMEOUT=30s
MAX_CONNECTIONS=10

# Service Configuration
DATA_PREPPER_PORT_OTLP=21892
DATA_PREPPER_PORT_HTTP=4900
DATA_PREPPER_PORT_METRICS=9600

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# Performance Tuning
BUFFER_SIZE=1000
BATCH_SIZE=100
FLUSH_TIMEOUT=5s

# Alerting Configuration
ALERTING_ENABLED=true
ALERT_ERROR_RATE_THRESHOLD=0.05
ALERT_DLQ_SIZE_THRESHOLD=500mb
ALERT_WINDOW=5m

# Monitoring Configuration
MONITORING_ENABLED=true
MONITORING_INTERVAL=30s
METRICS_PREFIX=data_prepper_error